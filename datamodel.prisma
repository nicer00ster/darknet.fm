enum Permission {
  ADMIN
  USER
  PERMISSIONUPDATE
  ADDSONG
  DELETESONG
  UPDATESONG
}

enum Tag {
  HIPHOP
  ROCK
  ELECTRONIC
  COUNTRY
  PUNK
  ALTERNATIVE
  BLUES
  CLASSICAL
  DANCE
  TECHNO
  RAP
  POP
  JAZZ
  SOUL
}

type User {
  id: ID! @unique
  name: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: Float
  permissions: [Permission]
  songs: [Song]! @relation(name: "UserToSong")
  avatar: String!
  followers: [User] @relation(name: "FollowersToFollowing")
  following: [User] @relation(name: "FollowingToFollowers")
  likedSongs: [Song] @relation(name: "UserToLikedSongs")
}

type Song {
  id: ID! @unique
  artist: String!
  title: String!
  description: String!
  image: String!
  song: String!
  tags: [Tag]
  createdAt: DateTime!
  updatedAt: DateTime!
  user: User! @relation(name: "UserToSong")
  likes: [User] @relation(name: "UserToSongLikes")
}
