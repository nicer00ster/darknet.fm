enum Permission {
  ADMIN
  USER
  PERMISSIONUPDATE
  ADDSONG
  DELETESONG
  UPDATESONG
}

enum Tag {
  HIPHOP
  ROCK
  ELECTRONIC
  COUNTRY
  PUNK
  ALTERNATIVE
  BLUES
  CLASSICAL
  DANCE
  TECHNO
  RAP
  POP
  JAZZ
  SOUL
}

type User {
  id: ID! @unique
  name: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: Float
  permissions: [Permission]
}

type Song {
  id: ID! @unique
  title: String!
  description: String!
  image: String!
  song: String!
  tags: [Tag]
  createdAt: DateTime!
  updatedAt: DateTime!
  user: User!
}
